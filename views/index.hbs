<html>
    <head>
        <title>Local search</title>
        <style>
            #a1{
                width: 110%;

            }
            </style>

    </head>
    <body >
<div class="wrap">
    <h1>{{title}}</h1>
<p>Welcome to {{title}}</p>
<form method="post"  action="/main">
	<div id="scrollable-dropdown-menu">
			<input type="text" name="search"  data-live-search="true" class="typeahead tt-query" autocomplete="on" spellcheck="true"  placeholder="service.." />
	</div>
	<input type="text" name="city"  id='city' data-live-search="true" class="city" autocomplete="off" spellcheck="true"  placeholder="Location.." />
<div>
<button class="button"><span>Search</span></button>
</div>
</form>
<div class="wall" align="center" id="a1">
     <br>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
            <div class="item active">
               
                <a href="/male" > <img src="images/menu/a4.jpg" alt="Chania" width="460" height="345"></a>
            </div>

            <div class="item">
                <img src="images/menu/a1.jpg" alt="city" width="460" height="345">
            </div>
            
            <div class="item">
                <img src="images/menu/a2.jpg" alt="offer" width="460" height="345">
            </div>

            <div class="item">
            <a href="/food" >  <img src="images/menu/a3.jpg" alt="food" width="460" height="345"></a>
            </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
        </div>
        </div>
		
    </body>
</html>